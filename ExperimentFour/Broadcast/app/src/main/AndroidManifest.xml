<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liwensheng.broadcast">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".StaticPageActivity"
            android:theme="@style/NoBarTheme"
            >

        </activity>

        <receiver
            android:name=".StaticReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.liwensheng.broadcast.staticreceiver"></action>
            </intent-filter>
        </receiver>

        <activity
            android:name=".DynamicActivity"
            android:launchMode="singleInstance"
            android:theme="@style/NoBarTheme">
            <intent-filter>
                <action android:name="com.example.liwensheng.broadcast.dynamic"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>


    </application>

</manifest>
